{
  "compilerOptions": {
    "target": "es2018",
    "module": "es6",
    "rootDir": "./src",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules"]
}
